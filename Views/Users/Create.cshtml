@model CSCAP.Models.User

@{
    ViewData["Title"] = "Create";
}


<section class="h-100 h-custom gradient-custom-2">
    <div class="container py-5 h-100">
            <h1 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 mt-3">ساخت کاربر</h1>
        <hr />
        <div class="row  justify-content-center align-items-center h-100">
            <div class="col-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">نام کاربری</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">گذرواژه</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">پست الکترونیکی</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">شماره تلفن</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParentUserId" class="control-label">معرف</label>
                        <select asp-for="ParentUserId" class ="form-control" asp-items="ViewBag.ParentUserId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreationDate" class="control-label">تاریخ ساخت اکانت</label>
                        <input asp-for="CreationDate" class="form-control" />
                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpireDate" class="control-label">تاریخ اتمام اکانت</label>
                        <input asp-for="ExpireDate" class="form-control" />
                        <span asp-validation-for="ExpireDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AgreedFee" class="control-label">قیمت</label>
                        <input asp-for="AgreedFee" class="form-control" />
                        <span asp-validation-for="AgreedFee" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Wallet" class="control-label">کیف پول</label>
                        <input asp-for="Wallet" class="form-control" />
                        <span asp-validation-for="Wallet" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group ">
                        <label asp-for="ServerId" class="control-label">سرور</label>
                        <select asp-for="ServerId" class ="form-control" asp-items="ViewBag.ServerId"></select>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="ساخت اکانت" class="btn btn-primary" />
                    </div>               
                   
                </form>
                <div class="mt-3">
                    <a asp-action="Index">Back to List</a>
                </div>
           </div>
        </div>
    </div>
</section>


